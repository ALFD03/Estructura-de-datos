// Funcion de archivo para que el programa guarde datos y se puedan ver
// incluso despues de cerrar el terminal

#include <fstream>
#include <stdlib.h>
#include <iostream>

using namespace std;

void archivo ();
void leer();
void Add();

int main {
    Archivo();
    Leer();
    Add();


    return 0;
}


// ========= Crear Archivo ==========

void Archivo(){
    ofstram Crear;  // declaracion de la "Variable" para utilizar el achivo
    //variables

    Crear.open ("Crear del archivo para guardad.txt",ios::out); // crear el archivo

    if (Crear.fail()){       // para ver si el archivo se guardo correctamente
        cout << "El archivo no se guardo";
        exit(1)
    }

    Crear << ""<< variable;           //que se va a guardar dentro del archivo

    Crear.close();
}

// ========== Leer Archivo de textos ==========

void leer(){
ifstream Leer;
string texto;

Leer.open("nombre de archivo.txt",ios::in); //modo lectura
if (Leer.fail()){
    cout << "el archivo no existe";
    exut (1)
}

while(!Leer.eof){   //mientras no sea el final del archivo
    getline(Leer.texto);
    cout << texto << endl;

}

Leer.close ();
}

// ========== Añadir texto =========

void Add(){
    ofstream add;
    //varibles

    add.open("nombre de archivo.txt",ios::app) // modo añadir

    if (add.fail()){
        cout << "el archivo no existe";
    exut (1)
    }
    add << "" << variable; // añadir texto

    add.close();
}
